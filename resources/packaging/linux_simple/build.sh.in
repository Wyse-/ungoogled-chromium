#!/bin/bash

# Simple build script for Linux

wget -P ./third_party/node/linux https://nodejs.org/download/release/v6.9.4/node-v6.9.4-linux-x64.tar.gz
tar -xzf ./third_party/node/linux/node-v6.9.4-linux-x64.tar.gz -C ./third_party/node/linux/
mv ./third_party/node/linux/node-v6.9.4-linux-x64 ./third_party/node/linux/node-linux-x64
rm -rf out || true
mkdir out
mkdir $ungoog{build_output}
env QUILT_PATCHES=$ungoog{build_files_dir}/patches quilt push -a
$ungoog{build_gn_command}
./$ungoog{build_output}/gn gen $ungoog{build_output} --args='$ungoog{gn_args_string}' --fail-on-unused-args
ninja -C $ungoog{build_output} chrome
